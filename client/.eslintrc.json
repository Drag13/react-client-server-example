{
  "extends": ["../.eslintrc.json", "plugin:react/recommended"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["@typescript-eslint", "react"],
  "rules": {
    "react/react-in-jsx-scope": "off"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "ignorePatterns": [
    "src/**/*.test.ts",
    "dist/**/*.*",
    "vite.config.ts",
    "jest.config.ts",
    "setupTests.ts"
  ]
}
