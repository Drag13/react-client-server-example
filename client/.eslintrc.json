{
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:react/recommended",
    "prettier"
  ],
  "parserOptions": {
    "project": ["./client/tsconfig.json"],
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["@typescript-eslint", "react"],
  "rules": {
    "react/react-in-jsx-scope": "off"
  },
  "ignorePatterns": [
    "src/**/*.test.ts",
    "dist/**/*.*",
    "vite.config.ts",
    "jest.config.ts",
    "setupTests.ts"
  ]
}
